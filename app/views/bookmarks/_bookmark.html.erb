<% liked_bookmark ||= nil %>
<div class="media-body">
     <div class="col-md-8">
        <%= image_tag bookmark.thumbnail, size: '50' %> 
        <p><%= link_to bookmark.url, bookmark.url %></p>
        
        <% if policy(bookmark).destroy? %>
        <small><%= link_to "Delete Bookmark", [bookmark.topic, bookmark], method: :delete %></small>
        <% end %>

        <%= render partial: 'likes/like', locals: {bookmark: bookmark} %>
      </div> 
  </div>
          