<h1><%= @topic.title %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= link_to "Add New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>  
    </div>
    <div class="col-md-4">
      <% if policy(@topic).update? %>
        <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-success' %>
      <% end %>
      <% if policy(@topic).destroy? %>
        <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?'} %>
      <% end %>
      <%= link_to "All Topics", topics_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
</br>
<div class="container">
  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <%= render bookmark %>
    <% end %>
  </div>
</div>



